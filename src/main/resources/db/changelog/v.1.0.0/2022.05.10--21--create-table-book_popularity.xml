<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="dmitriy_kir" id="2022.05.10--21--create-table-book_popularity">
        <createTable tableName="book_popularity">
            <column defaultValueNumeric="0" name="value" type="FLOAT" remarks="неотрицательное число, которое можно
            рассчитать по формуле, если книга не привязана к пользователю, её популярность равена 0">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="INT" remarks="идентификатор книги, к которому относится данное значение
            популярности">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            drop table book_popularity;
        </rollback>
    </changeSet>

</databaseChangeLog>